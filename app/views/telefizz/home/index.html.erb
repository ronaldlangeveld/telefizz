<div class="container mx-auto p-6">
  <div class="mb-8">
    <h1 class="text-3xl font-bold">Dashboard</h1>
    <p class="text-base-content/60 mt-1">Welcome back! Here's what's happening with your boards.</p>
  </div>

  <!-- Stats -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <div class="stat bg-base-100 shadow rounded-box">
      <div class="stat-figure text-primary">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h3.75M9 15h3.75M9 18h3.75m3 .75H18a2.25 2.25 0 0 0 2.25-2.25V6.108c0-1.135-.845-2.098-1.976-2.192a48.424 48.424 0 0 0-1.123-.08m-5.801 0c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 0 0 .75-.75 2.25 2.25 0 0 0-.1-.664m-5.8 0A2.251 2.251 0 0 1 13.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m0 0H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V9.375c0-.621-.504-1.125-1.125-1.125H8.25Z" />
        </svg>
      </div>
      <div class="stat-title">Boards</div>
      <div class="stat-value text-primary"><%= @boards_count %></div>
    </div>

    <div class="stat bg-base-100 shadow rounded-box">
      <div class="stat-figure text-secondary">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 12h16.5m-16.5 3.75h16.5M3.75 19.5h16.5M5.625 4.5h12.75a1.875 1.875 0 0 1 0 3.75H5.625a1.875 1.875 0 0 1 0-3.75Z" />
        </svg>
      </div>
      <div class="stat-title">Total Events</div>
      <div class="stat-value text-secondary"><%= @events_count %></div>
    </div>

    <div class="stat bg-base-100 shadow rounded-box">
      <div class="stat-figure text-accent">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13.19 8.688a4.5 4.5 0 0 1 1.242 7.244l-4.5 4.5a4.5 4.5 0 0 1-6.364-6.364l1.757-1.757m13.35-.622 1.757-1.757a4.5 4.5 0 0 0-6.364-6.364l-4.5 4.5a4.5 4.5 0 0 0 1.242 7.244" />
        </svg>
      </div>
      <div class="stat-title">Integrations</div>
      <div class="stat-value text-accent"><%= Current.user.integrations.count %></div>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="flex flex-wrap gap-4 mb-8">
    <%= link_to telefizz_new_board_path, class: "btn btn-primary" do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
      </svg>
      Add New Board
    <% end %>
    <%= link_to telefizz_integrations_path, class: "btn btn-outline" do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M13.19 8.688a4.5 4.5 0 0 1 1.242 7.244l-4.5 4.5a4.5 4.5 0 0 1-6.364-6.364l1.757-1.757m13.35-.622 1.757-1.757a4.5 4.5 0 0 0-6.364-6.364l-4.5 4.5a4.5 4.5 0 0 0 1.242 7.244" />
        </svg>
      Manage Integrations
    <% end %>
    <%= link_to telefizz_board_path, class: "btn btn-ghost" do %>
      View All Boards
    <% end %>
  </div>

  <!-- Recent Events -->
  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <h2 class="card-title">Recent Events</h2>
      
      <% if @recent_events.any? %>
        <div class="overflow-x-auto">
          <table class="table">
            <thead>
              <tr>
                <th>Event</th>
                <th>Board</th>
                <th>Time</th>
              </tr>
            </thead>
            <tbody>
              <% @recent_events.each do |event| %>
                <tr class="hover">
                  <td>
                    <div class="flex items-center gap-2">
                      <% case event.action %>
                      <% when "card_published" %>
                        <span class="text-lg">ğŸ“</span>
                      <% when "card_closed" %>
                        <span class="text-lg">âœ…</span>
                      <% when "card_reopened" %>
                        <span class="text-lg">ğŸ”„</span>
                      <% when "card_triaged" %>
                        <span class="text-lg">ğŸ”€</span>
                      <% when "comment_created" %>
                        <span class="text-lg">ğŸ’¬</span>
                      <% when "card_assigned" %>
                        <span class="text-lg">ğŸ‘¤</span>
                      <% else %>
                        <span class="text-lg">ğŸ“Œ</span>
                      <% end %>
                      <span class="font-mono text-sm"><%= event.action.humanize %></span>
                    </div>
                  </td>
                  <td><%= event.board.name %></td>
                  <td class="text-base-content/60"><%= time_ago_in_words(event.created_at) %> ago</td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-8">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-12 h-12 mx-auto text-base-content/30 mb-4">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
          </svg>
          <p class="text-base-content/50">No events yet. Add a board and connect it to Fizzy to see events here.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
